---
import Config from "../sarissa.config.cjs";
import Head from "../components/Head.astro";
import MobileNavbar from "../components/MobileNavbar.astro";
import SiteImage from "../components/SiteImage.astro";
import SocialMedia from "../components/SocialMedia.astro";
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";

const { pageTitle } = Astro.props;

---

<html lang="en">
  <Head pageTitle={pageTitle} />
  <body>
      <a href="#main-content" aria-label="Skip to main content"></a>
    <div class="drawer drawer-mobile">
      <label for="my-drawer" class="drawer-overlay"></label>
      <input aria-label="toggle the sidebar" id="my-drawer" type="checkbox" class="drawer-toggle"/>
      <div class="drawer-content flex justify-center lg:justify-start">
        <div class="sm:w-[70vw] max-w-screen-lg lg:pt-14 lg:p-4">
          <MobileNavbar />
          <div class="flex-1 p-3 md:py-[35]">
            <div class="space-y-2 md:space-y-6" id="main-content" role="main">
              <slot />
            </div>
            <Footer />
          </div>
        </div>
      </div>
      <div class="drawer-side">
        
        <div class="overflow-y-auto flex lg:justify-end w-fit sm:w-[30vw]">
          <div class="w-fit p-3 lg:m-6 bg-base-100">
            {Config.siteImagePath && <SiteImage />}
            <h1 class="text-2xl p-2 pl-4">{Config.siteTitle}</h1>
            <p class=" pl-4">{Config.siteDescription}</p>
          
            <SocialMedia />
            <div class="divider"></div>
            <Sidebar />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
