---
import Config from "../sarissa.config.cjs";
---

<style>
  #mc_embed_signup {
    text-align: center;
  }
</style>

<footer>
  <div class="divider"></div>
  <div id="mc_embed_signup">
    <form
      action="https://app.us21.list-manage.com/subscribe/post?u=7fe65d06991881da2ea15ad1b&id=47a5207572&f_id=0061e5e1f0"
      method="post"
      id="mc-embedded-subscribe-form"
      name="mc-embedded-subscribe-form"
      class="validate"
      target="_blank"
      novalidate
    >
      <div id="mc_embed_signup_scroll">
        <p>Enter your email to be notified when a new article is being posted</p>
        <h2>Subscribe now!</h2>
        
        <div class="mc-field-group form-control">
          <label for="mce-EMAIL" class=""
            >Email Address <span class="asterisk ">*</span>
          </label>
          <input
            type="email"
            value=""
            name="EMAIL"
            class="required email input input-bordered input-primary"
            id="mce-EMAIL"
            required
          />
          <span id="mce-EMAIL-HELPERTEXT" class="helper_text"></span>
        </div>
        <div id="mce-responses" class="clear foot">
          <div class="response" id="mce-error-response" style="display:none">
          </div>
          <div class="response" id="mce-success-response" style="display:none">
          </div>
        </div>
        <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
        <div style="position: absolute; left: -5000px;" aria-hidden="true">
          <input
            type="text"
            name="b_7fe65d06991881da2ea15ad1b_47a5207572"
            tabindex="-1"
            value=""
          />
        </div>
        <div class="optionalParent">
          <div class="clear foot">
            <input
              type="submit"
              value="Subscribe"
              name="subscribe"
              id="mc-embedded-subscribe"
              class="btn mt-3"
            />
          </div>
        </div>
      </div>
    </form>
  </div>

  <p class="pl-4 text-center">{Config.footer}</p>
</footer>

<script is:inline src='https://s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
<script is:inline>
  (function ($) {
    window.fnames = new Array();
    window.ftypes = new Array();
    fnames[0] = "EMAIL";
    ftypes[0] = "email";
    fnames[1] = "FNAME";
    ftypes[1] = "text";
    fnames[2] = "LNAME";
    ftypes[2] = "text";
    fnames[3] = "ADDRESS";
    ftypes[3] = "address";
    fnames[4] = "PHONE";
    ftypes[4] = "phone";
    fnames[5] = "BIRTHDAY";
    ftypes[5] = "birthday";
  })(jQuery);
  var $mcj = jQuery.noConflict(true);
</script>