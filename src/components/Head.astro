---
import Config from "../sarissa.config.cjs";

const { pageTitle } = Astro.props;

const title = pageTitle + " - " + Config.siteTitle;
---

<head>
  <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width,initial-scale=1" />
 <meta name="description" content={Config.description}>
  <title>{title}</title>
<link rel="canonical" href="https://codealagreek.netlify.app/" />
  <link rel="icon" href={Config.favicon}>
<!-- Facebook Meta Tags -->
<meta property="og:url" content="https://codealagreek.netlify.app/">
<meta property="og:type" content="website">
<meta property="og:title" content={title}>
<meta property="og:description" content={Config.description}>
<meta property="og:image" content={Config.siteImagePath}>

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta property="twitter:domain" content="codealagreek.netlify.app">
<meta property="twitter:url" content="https://codealagreek.netlify.app/">
<meta name="twitter:title" content={title}>
<meta name="twitter:description" content={Config.description}>
<meta name="twitter:image" content={Config.siteImagePath}>

  <script async src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
</head>
